<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgamer"
    android:orientation="vertical"
    tools:context="com.example.cjignacio.tapsharky.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/timeLabel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="60dp"
            android:text="Time:"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/montserrat"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Score:"
            android:layout_marginRight="60dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </RelativeLayout>


    <!--<Button-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="20dp"-->
    <!--android:layout_gravity="right"-->
    <!--android:layout_marginTop="-35dp"-->
    <!--android:layout_marginRight="10dp"-->
    <!--android:background="@drawable/exit"/>-->

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Tap to Start"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/shark"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sharkyhalf" />

        <ImageView
            android:id="@+id/fishy1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy1" />

        <ImageView
            android:id="@+id/fishy2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy2" />

        <ImageView
            android:id="@+id/fishy3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy3"/>

        <ImageView
            android:id="@+id/fishy4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy4"/>

        <ImageView
            android:id="@+id/fishy5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy5"/>

        <ImageView
            android:id="@+id/fishy6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy6"/>

        <ImageView
            android:id="@+id/fishy7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy7"/>

        <ImageView
            android:id="@+id/fishy8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy8"/>

        <ImageView
            android:id="@+id/fishy9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fishy9"/>

        <ImageView
            android:id="@+id/puffer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/puffer" />

        <ImageView
            android:id="@+id/poison"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/poison" />

        <!--Moving Background-->

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:src="@drawable/silfish2"
            android:id="@+id/silfish2"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@drawable/silfish2"
            android:id="@+id/silfish3"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:src="@drawable/silfish2"
            android:id="@+id/silfish4"/>

        <ImageView
            android:id="@+id/bub"
            android:layout_width="300dp"
            android:layout_height="225dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bub"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </LinearLayout>


    </FrameLayout>

</LinearLayout>
