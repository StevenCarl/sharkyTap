<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/home"
    tools:context="com.example.cjignacio.tapsharky.StartActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp">
        <!-- Settings -->
        <Button
            android:id="@+id/button_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/settings" />

        <!-- For Donation -->
        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_play"
            android:layout_alignBottom="@+id/button_play"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_donate"
            android:drawableRight="@drawable/love"
            android:fontFamily="@font/montserrat"
            android:onClick="donateNow"
            android:text="   Donate"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logo" />

    </RelativeLayout>
    <!-- For Swimming -->
    <Button
        android:id="@+id/swim"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_file"
        android:fontFamily="@font/montserrat"
        android:onClick="startGame"
        android:text="Swim"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- For How to -->
    <Button
        android:onClick="howTo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_file"
        android:fontFamily="@font/montserrat"
        android:text="How to play"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:textStyle="bold" />

    <!-- For Rating -->
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_file"
        android:fontFamily="@font/montserrat"
        android:text="High Score"
        android:onClick="scoreHigh"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- For High Score -->
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_hs"
        android:fontFamily="@font/montserrat"
        android:text="Credits"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="All rights reserved 2018"
        android:layout_marginTop="@dimen/twenty_dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"/>

</LinearLayout>

