<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/game"
    tools:context="com.example.cjignacio.tapsharky.CreditsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I would like to thank"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="100dp"/>

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/viewFlipper"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="39dp"
            android:fontFamily="@font/montserrat"
            android:text="Coding with Sarah"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Icons8"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="YouTube"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Hackathon Buddies"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Pink Fong"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Dr. Arvin Dela Cruz"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Ignacio Clan"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Freepik"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Google and Images"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="God Almighty Father"
            android:textSize="40sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="40dp"
            />

    </ViewFlipper>

</RelativeLayout>
